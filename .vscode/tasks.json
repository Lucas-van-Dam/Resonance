{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Debug",
        "type": "shell",
        "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/MSBuild/Current/Bin/MSBuild.exe",
        "args": [
          "Resonance.sln",
          "/p:Configuration=Debug",
          "/m",
          "/v:normal", 
          "/clp:ErrorsOnly"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$gcc",  // This handles clang-cl format
          "$msCompile"  // Fallback for MSVC
        ],
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Clean",
        "type": "shell",
        "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/MSBuild/Current/Bin/MSBuild.exe",
        "args": [
          "Resonance.sln",
          "/t:Clean",
          "/p:Configuration=Debug"
        ]
      }
    ]
  }